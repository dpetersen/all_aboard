<h3>Source: {{name}}</h3>

<ul>
  <li>
    <h4>Configurable Attributes</h4>
    {{#each configurableAttribute in configurableAttributes}}
        {{render "configurableAttribute" configurableAttribute}}
    {{/each}}

    <h4>Perspectives</h4>
    <ul>
      {{#each perspectives}}
        <li>
          {{name}}
          <em>{{description}}</em>

          <ul>
            {{#each templates}}
              <li>{{width}}x{{height}}</li>
            {{/each}}
          </ul>
        </li>
      {{/each}}
    </ul>
  </li>
</ul>
